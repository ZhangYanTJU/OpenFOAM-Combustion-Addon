FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSolution;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver PCG;
        preconditioner   DIC;
        tolerance        1e-05;
        relTol           0;
	minIter 0;
	maxIter 500;
    };

    p
    {
        solver PCG;
        preconditioner   DIC;
        tolerance        1e-06;
        relTol           0;
	minIter 0;
	maxIter 500;
    };

    "(U|CO2_Mean|CO2_MeanSqr|Z_Mean|Z_MeanSqr|k)"
    {
        solver PBiCG;
        preconditioner   DILU;
        tolerance        1e-05;
        relTol           0;
	minIter 0;
	maxIter 500;
    };

}

PISO
{
    nCorrectors     2;
    nNonOrthogonalCorrectors 1;
}

