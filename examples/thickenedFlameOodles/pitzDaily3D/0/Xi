FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           volScalarField;
    object          Xi;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    inlet           
    {
        type            fixedValue;
        value           uniform 1;
    }

    outlet          
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }

    upperWall       
    {
        type            zeroGradient;
    }

    lowerWall       
    {
        type            zeroGradient;
    }

    frontAndBack    
    {
        type            cyclic;
    }
}


